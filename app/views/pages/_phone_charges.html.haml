- content_for(:button_title, flush: true) do
  Phone usage
  %small.overview Calls charged outside included service

- content_for(:dropdown_amount, flush: true) do
  = currency(resource[:call_charges][:total])

= render 'bill_section', id: 'phone_charges', target: 'phone_expanded' do
  %table.table.phone_charges
    %caption Calls charged outside included service
    %tr
      %th.col-sm-4 Recipient
      %th.col-sm-5 Duration
      %th.col-sm-3 Charge
    - resource[:call_charges][:calls].each do |call_details|
      %tr
        %td.col-sm-4= call_details[:called]
        %td.col-sm-5= call_details[:duration]
        %td.col-sm-3= currency(call_details[:cost])
    %tr
      %td
      %td
      %td
        %b #{currency(resource[:call_charges][:total])}


